@using System.Web.Optimization;
@using FindMyItem.Common.Helpers;

<!DOCTYPE html>
<html lang="en" ng-app="findMyItem">
    <head>
        <meta charset="utf-8">
        <title>FindMyItem.co.uk - Free Classifieds Advert Search Engine</title>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />

        <meta name="keywords" content="find, my, item, find my item, Search classifieds, classifieds ads, classifieds search, ads, classified advert search engine, search adverts, search motors, search jobs, used items search, secondhand items search" />
        <meta name="description" content="Find My Item is a classifieds advert search engine for all classifieds, motors and jobs." />

        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <meta name="author" content="Find My Item">

        <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap.css")" type="text/css" />
    
        <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap-responsive.css")" type="text/css" />

        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
            <script href="@Url.Content("~/Scripts/html5shiv.js")" </script>
        <![endif]-->

        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" /> 

        <script src="@BundleTable.Bundles.ResolveBundleUrl("~/bundles/jquery")" type="text/javascript"></script>
        <script src="@BundleTable.Bundles.ResolveBundleUrl("~/bundles/angular")" type="text/javascript"></script>

        <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

        <!-- Fav and touch icons -->
        <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
        <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
            <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
                        <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
                                        <link rel="shortcut icon" href="../assets/ico/favicon.png">
        
    </head>
    <body>
        <div id="fb-root"></div>
            <script>(function (d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0];
                    if (d.getElementById(id)) return;
                    js = d.createElement(s); js.id = id;
                    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
                    fjs.parentNode.insertBefore(js, fjs);
                }(document, 'script', 'facebook-jssdk'));</script>

        <div class="container">
            <div class="masthead">
                <img src="@Url.Content("~/Content/images/logo.jpg")"/>
                <ul class="nav nav-tabs nav-justified">
                    @Html.MenuItem("Home", "Index", "Home")
                    @Html.MenuItem("News", "News", "Home")
                    @Html.MenuItem("About", "About", "Home")
                </ul>
            </div>

            <div class="panel panel-default">
                <div class="panel-body">
                    @RenderBody() 
                </div>
            </div>      

            <div class="well">
                <a href="mailto:admin@findmyitem.co.uk"><img src="@Url.Content("~/Content/Images/icon_mail.png")" title="Email Us!" /></a> 
                <a href="http://www.facebook.com/findmyitem" target="_blank"><img src="@Url.Content("~/Content/Images/icon_facebook.png")" title="Our Facebook Page!" /></a>
                <a href="https://twitter.com/findmyitem" target="_blank"><img src="@Url.Content("~/Content/Images/icon_twitter.png")" title="Follow our Twitter!" /></a>
                <a href="http://www.pinterest.com/findmyitem" target="_blank"><img src="@Url.Content("~/Content/Images/icon_pintrest.png")" title="Follow our Pintrest board!" /></a>
                <a href="http://google.com/+FindmyitemCoUk" target="_blank"><img src="@Url.Content("~/Content/Images/icon_google.png")" title="Follow our Google +!" /></a>
            </div>

            <blockquote><small>&copy; @DateTime.Now.Year.ToString() FindMyItem.co.uk. All rights reserved</small></blockquote>

        </div> <!-- /container -->

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/angular")
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/Main")
        @Scripts.Render("~/bundles/Search")

        @RenderSection("scripts", required: false)
    </body>

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-45858303-1', 'findmyitem.co.uk');
        ga('send', 'pageview');

    </script>
</html>